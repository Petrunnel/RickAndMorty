<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicText" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/rick_and_morty_font_credits</item>
        <item name="android:textColor">@color/basic_text</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="BasicText.Details" parent="BasicText">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:shadowColor">@color/title_text_shadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/rick_and_morty</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:shadowColor">@color/title_text_shadow</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">25</item>
    </style>

</resources>